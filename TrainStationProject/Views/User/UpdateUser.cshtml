@model TrainStationProject.Models.Entites.User
@{
    ViewData["Title"] = "UpdateUser";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title"> Kullanıcı Güncelleme</h4>

            <form class="forms-sample" method="post">
                @Html.HiddenFor(x=> x.Id)
       
                <div class="form-group">
                    <label for="exampleInputName1">Kullanıcı Adı</label>
                    @Html.TextBoxFor(x => x.Username, new { @class = "form-control"})
                </div>
  
                <div class="form-group">
                    <label for="exampleInputEmail3">Şehir</label>
                    @Html.TextBoxFor(x => x.Password, new { @class = "form-control"})
                </div>

                <br />
                <button type="submit" class="btn btn-primary me-2">Güncelle</button>
            </form>
        </div>
    </div>
</div>