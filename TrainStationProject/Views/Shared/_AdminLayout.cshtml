<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        body {
            font-family: Arial, sans-serif;
        }

        .navbar {
            background-color: white;
            color: #333;
        }

            .navbar a {
                color: #333;
            }

                .navbar a:hover {
                    color: #ff6600;
                }

        .container {
            margin-top: 20px;
        }

        .content {
            padding: 20px;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light justify-content-center">

        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse justify-content-center" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="/User/Index/">Kullanıcı Ekle</a>
                </li>
                <br />
                <li class="nav-item">
                    <a class="nav-link" href="/Station/Index/">İstasyon Ekle</a>
                </li>
                <br />
                <li class="nav-item">
                    <a class="nav-link" href="/Voyage/Index">Sefer Ekle</a>
                </li>
            </ul>
        </div>

        <!-- Çıkış Yap bağlantısını sağ üst köşeye taşıdık -->
        <ul class="navbar-nav ml-auto">
            <!-- ml-auto, bağlantıları sağa hizalar -->
            <li class="nav-item">
                <a class="nav-link" href="/Login/SignIn">Çıkış Yap</a>
            </li>
        </ul>
    </nav>
    <div class="container">
        <div class="content">
            @RenderBody()
        </div>
    </div>

    <!-- Bootstrap JavaScript ve jQuery ekleyin -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>
</body>
</html>
