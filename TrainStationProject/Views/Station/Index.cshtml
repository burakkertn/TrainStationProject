@using TrainStationProject.Models.Entites
@model List<Station>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int sayac = 0;
}

<h1>Kullanıcı Listesi</h1>

<table class="table table-bordered">
    <tr>
        <th>#</th>

        <th>İstasyon Adı</th>
        <th>İstasyon Adresi</th>
        <th>İstasyon Konumu</th>
        <th>Sil</th>
        <th>Düzenle</th>

    </tr>
    @foreach (var item in Model)
    {
        <tr>
            @{
                sayac = sayac + 1;
            }
            <td>@sayac</td>
            <td>@item.StationName</td>
            <td>@item.StationAddress</td>
            <td>@item.StationLocation</td>
            <td><a href="/Station/DeleteStation/@item.Id" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/Station/UpdateStation/@item.Id" class="btn btn-outline-success">Güncelle</a></td>

        </tr>
    }
</table>


<a href="/Station/AddStation/" class="btn btn-outline-primary">Yeni Kullanıcı Kaydı</a>