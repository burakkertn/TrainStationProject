@model TrainStationProject.Models.Entites.Station
@{
    ViewData["Title"] = "UpdateStation";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title"> Kullanıcı Güncelleme</h4>

            <form class="forms-sample" method="post">
                @Html.HiddenFor(x=> x.Id)

                <div class="form-group">
                    <label for="exampleInputName1">İstasyon Adı</label>
                    @Html.TextBoxFor(x => x.StationName, new { @class = "form-control"})
                </div>

                <div class="form-group">
                    <label for="exampleInputEmail3">İstasyon Adresi</label>
                    @Html.TextBoxFor(x => x.StationAddress, new { @class = "form-control"})
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">İstasyon Konumu</label>
                    @Html.TextBoxFor(x => x.StationLocation, new { @class = "form-control"})
                </div>
                <br />
                <button type="submit" class="btn btn-primary me-2">Güncelle</button>
            </form>
        </div>
    </div>
</div>